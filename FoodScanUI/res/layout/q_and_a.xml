<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/q_and_a_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:text="Recipes"
        android:drawableLeft="@drawable/recipe"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/q_and_a_finds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:text="Where to find"
        android:drawableLeft="@drawable/where_to_find"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/q_and_a_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:text="Substitutes"
        android:drawableLeft="@drawable/substitute"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    

</LinearLayout>